		</materialDesign:Card>
		<materialDesign:Card VerticalAlignment="Stretch" Padding="20" Margin="20,10,0,0" Grid.Row="1" Grid.RowSpan="2" Grid.Column="1">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
